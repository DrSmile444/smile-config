{
  "name": "@smile-config/root",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start:cli": "npm --prefix ./packages/cli run start",
    "start:cli:watch": "npm --prefix ./packages/cli run start:watch",
    "build:cli": "nx build cli && chmod +x ./dist/packages/cli/bin/index.js && bash ./cli_post_build.sh",
    "repo:start": "npm run build:cli && smile-config",
    "postbuild:cli": "cp -R ./packages/cli/configs/ ./dist/packages/cli/configs",
    "link:cli": "npm run build:cli && cd ./dist/packages/cli && npm link",
    "unlink:cli": "npm uninstall smile-config -g",
    "pack:cli": "npm run build:cli && cd ./dist/packages/cli && npm pack",
    "publish:cli": "npm run build:cli && cd ./dist/packages/cli && npm publish",
    "prepare": "husky install",
    "test": "nx affected:test --parallel --maxParallel=5 --cache",
    "test:all": "nx run-many --target=test --all --parallel --maxParallel=5 --cache",
    "lint": "npm-run-all --parallel lint:branch-name lint:workspace test affected:lint",
    "lint:branch-name": "branch-name-lint ./.branchlintrc.json",
    "lint:commit-name": "commitlint --edit",
    "lint:workspace": "nx workspace-lint",
    "affected:lint": "nx affected:lint --parallel --maxParallel=5 --cache",
    "affected:lint:fix": "nx affected:lint --parallel --maxParallel=5 --cache --fix",
    "generate-uml": "LEVEL=info npx arkit",
    "track-time": "smile-track"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^13.2.0",
    "@nrwl/cli": "12.10.0",
    "@nrwl/eslint-plugin-nx": "12.9.0",
    "@nrwl/jest": "12.10.0",
    "@nrwl/linter": "12.10.0",
    "@nrwl/node": "^12.10.0",
    "@nrwl/tao": "12.10.0",
    "@nrwl/workspace": "12.10.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/deep-equal": "^1.0.1",
    "@types/eslint": "^7.28.0",
    "@types/inquirer": "^8.1.2",
    "@types/jest": "26.0.24",
    "@types/node": "14.14.33",
    "@types/stylelint": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "~4.28.3",
    "@typescript-eslint/eslint-plugin-tslint": "^4.31.0",
    "@typescript-eslint/parser": "~4.28.3",
    "branch-name-lint": "^2.1.1",
    "commitlint": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "27.0.3",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "smile-track": "^0.17.0",
    "stylelint": "^13.13.1",
    "ts-jest": "27.0.3",
    "tslint": "^6.1.3",
    "typescript": "~4.3.5"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "deep-equal": "^2.0.5",
    "inquirer": "^8.1.5",
    "json-merger": "^1.1.6",
    "p-queue": "^7.1.0",
    "queue": "^6.0.2",
    "slash": "^3.0.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.0",
    "type-fest": "^0.21.3",
    "update-notifier": "^5.1.0"
  }
}
